<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".QuestionFragment"
                                                   android:background="@color/colorPrimaryDark">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/questionTitleTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:text="@string/where_is_this_weather"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/opensans_regular"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/weatherIconIv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionTitleTv"
            android:src="@drawable/umbrella"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/weatherDescriptionTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/weatherIconIv"
            app:layout_constraintTop_toBottomOf="@id/questionTitleTv"
            android:text="Clear Sky"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/opensans_regular"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temperatureTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="\u2103"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/weatherDescriptionTv"
            app:layout_constraintStart_toEndOf="@id/weatherIconIv"
            android:fontFamily="@font/opensans_regular"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/weatherIconIv"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer1Btn"
            android:layout_width="0dp"
            android:text="London"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_button_neutral"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/weatherIconIv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/answer2Btn"
            android:fontFamily="@font/opensans_regular"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer2Btn"
            android:layout_width="0dp"
            android:text="London"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_button_neutral"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/answer1Btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/answer3Btn"
            android:fontFamily="@font/opensans_regular"/>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer3Btn"
            android:layout_width="0dp"
            android:text="London"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_button_neutral"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toBottomOf="@+id/answer2Btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            android:fontFamily="@font/opensans_regular"/>


</androidx.constraintlayout.widget.ConstraintLayout>